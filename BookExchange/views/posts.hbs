{{> nav}}
<div class="container" style="text-align:center">
    {{> post}}
    <br>
    <br>
    
    {{#each posts}}
    <div class="row">
        <div class="col-sm-1">
            <div class="thumbnail">
                <img class="img-responsive user-photo" src="{{this.user_img}}">
            </div><!-- /thumbnail -->
        </div><!-- /col-sm-1 -->

        <div class="col-sm-10">
        <div class="panel panel-default">
        <div class="panel-heading">
            <strong>{{this.username}}</strong> <span class="text-muted">{{this.created_at}}</span>
        </div>
        <div class="panel-body">
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
            <div class="panel-footer">
                Class number:{{this.class_number}}
            </div>
        </div><!-- /panel-body -->
        </div><!-- /panel panel-default -->
        </div><!-- /col-sm-5 -->
    </div>
    {{/each}}
</div>